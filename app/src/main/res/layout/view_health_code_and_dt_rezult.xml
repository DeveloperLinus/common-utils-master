<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/health_code_info_ll"
        android:layout_width="@dimen/health_code_info_ll_width"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/health_code_info_ll_margin_top"

        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/health_code_dt_result_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/code_health_title_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/code_health_title_tv_height"
                android:background="@drawable/health_code_ruselt_green"

                android:gravity="center"
                android:text="国康码"
                android:textColor="#2DA46A"
                android:textSize="@dimen/health_code_title_tv_text_size" />

            <TextView
                android:id="@+id/top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/health_code_and_dt_result_top_text_margin_top"
                android:text="@string/select_floor"
                android:textColor="@color/color_3333333"
                android:textSize="@dimen/health_code_and_dt_result_top_text_test_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/health_code_and_dt_result_bottom_text_margin_top"
                android:text="@string/select_floor_en"
                android:textColor="@color/color_3333333"
                android:textSize="@dimen/health_code_and_dt_result_bottom_text_text_size" />

            <RelativeLayout

                android:layout_width="@dimen/health_code_and_dt_result_dt_ll_size"
                android:layout_height="@dimen/health_code_and_dt_result_dt_ll_size"
                android:layout_gravity="center"

                android:layout_marginTop="@dimen/health_code_and_dt_result_dt_ll_margin_top">

                <TextView
                    android:id="@+id/dt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/lou_ceng_vip_bg"
                    android:gravity="center"
                    android:text="C1"
                    android:textColor="@color/dt_rs_vip_text"
                    android:textSize="@dimen/health_code_and_dt_result_dt_name_text_size" />


                <ImageView
                    android:id="@+id/dt_image"
                    android:layout_width="@dimen/health_code_and_dt_result_dt_image_size"
                    android:layout_height="@dimen/health_code_and_dt_result_dt_image_size"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/health_code_ui_ll_margin_top"
                android:layout_marginBottom="@dimen/health_code_ui_ll_margin_bottom"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView

                    android:id="@+id/heal_code_ui"
                    android:layout_width="@dimen/health_code_ui_size"
                    android:layout_height="@dimen/health_code_ui_size"
                    android:background="@drawable/health_code_green_qr" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/health_code_ui_size"
                    android:layout_marginStart="@dimen/health_code_time_tv_margin_left"
                    android:orientation="vertical">

                    <TextView
                        android:layout_alignParentTop="true"
                        android:id="@+id/time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2021-08-13 09:26:46"
                        android:textColor="#333333"
                        android:textSize="@dimen/health_code_time_tv_text_size" />

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/heath_code_name_tv_margin_right"
                            android:layout_weight="1"
                            android:text="姓名"
                            android:textColor="#777777"
                            android:textSize="@dimen/heath_code_name_tv_text_size" />

                        <TextView
                            android:id="@+id/id_card_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓名"
                            android:textColor="#777777"
                            android:textSize="@dimen/heath_code_id_card_tv_text_size" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/vip_icon"
        android:layout_width="@dimen/health_code_vip_icon_width"
        android:layout_height="@dimen/health_code_vip_icon_height"
        android:layout_alignTop="@+id/health_code_info_ll"
        android:layout_alignEnd="@+id/health_code_info_ll"
        android:background="@drawable/itl_health_code_vip_icon" />

</RelativeLayout>
</layout>