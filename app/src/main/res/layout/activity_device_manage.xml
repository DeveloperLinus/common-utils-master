<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="isLift"
            type="Boolean"/>
    </data>

<LinearLayout
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4b80ff"
       >
        <ImageView
            android:id="@+id/back"
            android:layout_width="14.5dp"
            android:layout_height="26dp"
            android:src="@drawable/zuo"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical ="true"
            />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27dp"
        android:text="设备管理"
        android:layout_centerInParent = "true"
        android:textColor="@android:color/white"
        />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="43dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_message"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shebeixinxi"
            />
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shebei"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="43dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wangluo"
            />
        <ImageView
            android:id="@+id/iv_xitong"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xitong"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="43dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_up_data"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banben"
            />
        <ImageView
            android:id="@+id/iv"
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banben"
            />
    </LinearLayout>
</LinearLayout>
</layout>